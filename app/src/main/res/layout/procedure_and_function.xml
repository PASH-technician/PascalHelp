<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Procedure">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_indent_in_the_section"
        android:orientation="vertical">

        <TextView
            style="@style/title_in_the_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Процедуры и функции: обзор"/>

        <TextView
            style="@style/plain_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Procedures_and_functions_overview_description"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>