<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoopOperators">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_indent_in_the_section"
        android:orientation="vertical">

        <TextView
            style="@style/title_in_the_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Оператор цикла for"/>

        <TextView
            style="@style/plain_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/For_loop_operation"/>

        <TextView
            style="@style/title_in_the_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Оператор цикла loop"/>

        <TextView
            style="@style/plain_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Loop_operation_loop_description"/>

        <TextView
            style="@style/title_in_the_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Оператор цикла foreach"/>

        <TextView
            style="@style/plain_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Foreach_loop_operation_description"/>

        <TextView
            style="@style/title_in_the_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Операторы цикла while и repeat"/>

        <TextView
            style="@style/plain_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/While_and_repeat_loop_operation_descriptions"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>